{
    // ===================================================================================
    // ==                                   Window                                      ==
    // ===================================================================================
    "window.newWindowProfile": "Default",
    "window.menuBarVisibility": "compact",
    "window.commandCenter": false,
    "window.title": "${folderName}",
    "window.titleBarStyle": "custom",
    "window.density.editorTabHeight": "default",
    "window.newWindowDimensions": "inherit",
    "window.zoomLevel": 0.5,

    // ===================================================================================
    // ==                                  Workbench                                    ==
    // ===================================================================================
    // == Theme ==========================================================================
    "workbench.colorTheme": "One Dark Pro Darker",
    "workbench.iconTheme": "vscode-icons",
    // == Tree ===========================================================================
    "workbench.tree.renderIndentGuides": "onHover",
    "workbench.tree.indent": 8,
    // == Panel ==========================================================================
    "workbench.panel.defaultLocation": "right",
    // == Others =========================================================================
    "workbench.tips.enabled": false,
    "workbench.startupEditor": "none",
    "workbench.layoutControl.enabled": false,
    "workbench.tree.enableStickyScroll": true,

    // ===================================================================================
    // ==                                    Editor                                     ==
    // ===================================================================================
    "editor.fontFamily": "PlemolJP Console NF",
    "editor.fontSize": 12,
    "editor.lineHeight": 2.3,
    "editor.scrollbar.verticalScrollbarSize": 12,
    "editor.scrollbar.horizontalScrollbarSize": 10,
    "editor.minimap.enabled": false,
    "editor.cursorSurroundingLines": 5,
    "editor.smoothScrolling": true,
    "editor.quickSuggestionsDelay": 400,
    "editor.linkedEditing": true,
    "editor.inlineSuggest.enabled": false,

    // ===================================================================================
    // ==                                   Explorer                                    ==
    // ===================================================================================
    "explorer.incrementalNaming": "smart",
    "explorer.compactFolders": false,
    "explorer.copyPathSeparator": "/",
    "explorer.copyRelativePathSeparator": "/",

    // ===================================================================================
    // ==                                    Files                                      ==
    // ===================================================================================
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.associations": {
        "*.tsx": "typescriptreact"
    },

    // ===================================================================================
    // ==                                    Search                                     ==
    // ===================================================================================

    // ===================================================================================
    // ==                                   Terminal                                    ==
    // ===================================================================================

    // ===================================================================================
    // ==                                     Git                                       ==
    // ===================================================================================

    // ===================================================================================
    // ==                                    Debug                                      ==
    // ===================================================================================
    "debug.toolBarLocation": "docked",

    // ===================================================================================
    // ==                                  Languages                                    ==
    // ===================================================================================
    // == Python =========================================================================
    "python.analysis.typeCheckingMode": "standard",
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.tabSize": 4
    },
    // == TypeScript =====================================================================
    "typescript.updateImportsOnFileMove.enabled": "always",
    "[typescriptreact]": {
        "editor.tabSize": 2,
        "prettier.tabWidth": 2,
        "editor.quickSuggestions": {
            "strings": true
        }
    },
    "[typescript]": {
        "editor.tabSize": 2,
        "prettier.tabWidth": 2
    },
    // == JavaScript =====================================================================
    "javascript.updateImportsOnFileMove.enabled": "always",
    "[javascript]": {
        "editor.tabSize": 2,
        "prettier.tabWidth": 2
    },
    // == Markdown =======================================================================
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
    "markdown.preview.markEditorSelection": false,
    "[markdown]": {
        "editor.defaultFormatter": "yzhang.markdown-all-in-one"
    },
    // == Css ============================================================================
    "[css]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    // == Tailwind =======================================================================
    "tailwindCSS.hovers": true,
    // == Lua ============================================================================
    "[lua]": {
        "editor.defaultFormatter": "sumneko.lua"
    },
    // == SQL ============================================================================
    "[sql]": {
        "editor.defaultFormatter": "ReneSaarsoo.sql-formatter-vsc"
    },
    // == Prisma =========================================================================
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    // == Json with comments ==============================================================
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.tabSize": 4,
        "prettier.tabWidth": 4
    },

    // ===================================================================================
    // ==                                  Extensions                                   ==
    // ===================================================================================
    // == Core ===========================================================================
    "extensions.experimental.affinity": {
        "vscodevim.vim": 1
    },
    // == One Dark Pro ===================================================================
    "oneDarkPro.vivid": true,
    "oneDarkPro.bold": false,
    "oneDarkPro.italic": false,
    // == Material Icon ==================================================================
    // == VS Icons =======================================================================
    "vsicons.dontShowNewVersionMessage": true,
    // == Spell Check ====================================================================
    // == Claude Code ====================================================================
    "cSpell.enabled": true,
    "cSpell.ignoreRegExpList": ["[０-９Ａ-Ｚａ-ｚぁ-んァ-ヶ亜-熙纊-黑]+"],
    "cSpell.customDictionaries": {
        "tech-terms": {
            "name": "tech-terms",
            "path": "./dictionaries/tech-terms.txt",
            "scope": "user"
        }
    },
    // == Claude Code ====================================================================
    "claudeCode.preferredLocation": "sidebar",
    "claudeCode.useCtrlEnterToSend": true,

    // ===================================================================================
    // ==                                     Vim                                       ==
    // ===================================================================================
    // == Insert =========================================================================
    "vim.insertModeKeyBindingsNonRecursive": [
        { "before": ["j", "j"], "after": ["<esc>"] }
    ],
    // == Normal =========================================================================
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": ["j"], "after": ["g", "j"] },
        { "before": ["k"], "after": ["g", "k"] },
        { "before": ["g", "j"], "after": ["j"] },
        { "before": ["g", "k"], "after": ["k"] },
        { "before": ["<esc>"], "commands": [":nohl"] },
        { "before": ["u"], "commands": ["undo"] },
        { "before": ["<c-r>"], "commands": ["redo"] },
        { "before": ["d"], "after": ["\"", "_", "d"] },
        { "before": ["<s-d>"], "after": ["\"", "_", "D"] },
        {
            "before": ["<c-j>"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["<c-k>"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        { "before": ["<s-y>"], "after": ["y", "$"] },
        { "before": ["<s-k>"], "after": ["1", "0", "k"] },
        { "before": ["<s-j>"], "after": ["1", "0", "j"] },
        { "before": ["<s-l>"], "after": ["$"] },
        { "before": ["<s-h>"], "after": ["^"] },
        { "before": ["<leader>", "a"], "after": ["g", "g", "V", "G"] },
        { "before": ["<c-o>"], "commands": ["workbench.action.navigateBack"] },
        {
            "before": ["<c-i>"],
            "commands": ["workbench.action.navigateForward"]
        },
        {
            "before": ["<leader>", "<leader>"],
            "commands": ["editor.action.triggerSuggest"]
        },
        {
            "before": ["<leader>", "]"],
            "commands": ["editor.action.revealDefinition"]
        },
        {
            "before": ["<leader>", "["],
            "commands": ["editor.action.goToTypeDefinition"]
        },
        {
            "before": ["<leader>", "\\"],
            "commands": ["editor.action.goToReferences"]
        },
        {
            "before": ["<leader>", "g", "h"],
            "commands": ["editor.action.showDefinitionPreviewHover"]
        },
        { "before": ["<leader>", "."], "commands": ["editor.action.quickFix"] },
        {
            "before": ["<leader>", "/"],
            "commands": ["editor.action.commentLine"]
        },
        { "before": ["<leader>", "q"], "commands": [":q"] },
        { "before": ["n"], "after": ["n", "z", "z"] },
        { "before": ["<s-n>"], "after": ["N", "z", "z"] },
        { "before": ["<leader>", "v"], "commands": [":vsplit"] },
        { "before": ["<leader>", "s"], "commands": [":split"] },
        {
            "before": ["<leader>", "h"],
            "commands": ["workbench.action.focusLeftGroup"]
        },
        {
            "before": ["<leader>", "j"],
            "commands": ["workbench.action.focusBelowGroup"]
        },
        {
            "before": ["<leader>", "k"],
            "commands": ["workbench.action.focusAboveGroup"]
        },
        {
            "before": ["<leader>", "l"],
            "commands": ["workbench.action.focusRightGroup"]
        },
        { "before": [">"], "commands": ["editor.action.indentLines"] },
        { "before": ["<"], "commands": ["editor.action.outdentLines"] },
        {
            "before": ["<tab>"],
            "commands": [
                "workbench.action.quickOpenPreviousRecentlyUsedEditorInGroup"
            ]
        },
        {
            "before": ["<leader>", "`"],
            "commands": ["workbench.action.closeAllGroups"]
        },
        { "before": ["<leader>", "2"], "commands": ["editor.action.rename"] },
        {
            "before": ["<leader>", "n"],
            "commands": ["workbench.action.editor.nextChange"]
        },
        {
            "before": ["<leader>", "p"],
            "commands": ["workbench.action.editor.previousChange"]
        },
        {
            "before": ["<leader>", "<S-n>"],
            "commands": ["editor.action.marker.nextInFiles"]
        },
        {
            "before": ["<leader>", "<S-p>"],
            "commands": ["editor.action.marker.prevInFiles"]
        },
        {
            "before": [":"],
            "commands": ["workbench.action.showCommands"],
            "silent": true
        }
    ],

    // == Visual =========================================================================
    "vim.visualModeKeyBindingsNonRecursive": [
        { "before": ["<C-n>"], "after": ["g", "b"] },
        { "before": ["d"], "after": ["\"", "_", "d"] },
        {
            "before": ["<C-j>"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["<C-k>"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        { "before": ["J"], "after": ["1", "0", "j"] },
        { "before": ["K"], "after": ["1", "0", "k"] },
        { "before": ["<S-l>"], "after": ["$"] },
        { "before": ["<S-h>"], "after": ["^"] },
        {
            "before": ["<leader>", "/"],
            "commands": ["editor.action.commentLine"]
        }
    ],
    // == Command =========================================================================
    "vim.commandLineModeKeyBindingsNonRecursive": [
        { "before": ["<CR>"], "after": ["<CR>", "z", "z"] }
    ],
    // == Others ==========================================================================
    "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.foldfix": true,
    "vim.useSystemClipboard": true,
    "vim.leader": "<space>",
    "vim.visualstar": true,
    "vim.camelCaseMotion.enable": true,
    "vim.overrideCopy": false,
    "vim.highlightedyank.enable": true,
    "vim.highlightedyank.color": "rgba(250, 240, 170, 0.5)",
    "vim.searchHighlightColor": "#FEFF3F",
    "vim.searchHighlightTextColor": "#000000"

    // ===================================================================================
    // ==                                   Others                                      ==
    // ===================================================================================
}
